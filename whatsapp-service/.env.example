# Servidor
PORT=3001
HOST=0.0.0.0
LOG_LEVEL=info

# Seguranca interna entre Flask -> microservico
WHATSAPP_SERVICE_API_KEY=troque-essa-chave

# Persistencia das sessoes (cada usuario em /sessions/{user_id})
WHATSAPP_SESSIONS_DIR=./sessions

# Boas praticas anti-bloqueio
WHATSAPP_MIN_DELAY_MS=1200
WHATSAPP_MAX_DELAY_MS=2600

# Webhook opcional para mensagens recebidas
# Exemplo: http://backend:5000/api/internal/whatsapp/inbound
WHATSAPP_INBOUND_WEBHOOK_URL=
WHATSAPP_INBOUND_WEBHOOK_SECRET=
WHATSAPP_WEBHOOK_TIMEOUT_MS=8000
